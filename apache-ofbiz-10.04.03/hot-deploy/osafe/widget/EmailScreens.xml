    </screen>
    <screen name="emailBodyFooterContent">
        <section>
            <actions>
                <set field="contentId" value="${contentEmailBodyFooterId}" />
            </actions>
            <widgets>
                <include-screen name="displayContent" />
            </widgets>
        </section>
    </screen>

    <screen name="displayContent">
        <section>
                <actions>
                    <property-map resource="osafe" map-name="OSafeConfig" global="true" />

                    <set field="baseEcommerceUrl" value="${baseUrl}${OSafeConfig['osafe-app-path']}" />
                    <set field="baseEcommerceSecureUrl" value="${baseSecureUrl}${OSafeConfig['osafe-app-path']}" />
                    <set field="clientLogoPath" value="${OSafeConfig['client-logo-path']}" />
                    <set field="emailFontFamily" value="${OSafeConfig['email-font-family']}" />
                    <set field="contentId" from-field="contentId" />
                    <script location="component://osafe/webapp/osafe/WEB-INF/actions/common/eCommerceContent.groovy" />
                </actions>
            <widgets>
                <section>
                    <condition>
                       <and>
                        <not><if-empty field="content"/></not>
                        <if-compare operator="equals" field="content.statusId" value="CTNT_PUBLISHED"/>
                       </and>
                    </condition>
                    <widgets>
                        <content content-id="${content.contentId}"/>
                    </widgets>
                </section>
            </widgets>
        </section>
    </screen>

