<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">


    <screen name="main-decorator">
        <section>
            <actions>
                <property-map resource="EcommerceUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true"/>

                <set field="layoutSettings.javaScripts[+0]" value="/osafe_theme/js/lib/jquery.jcarousel.min.js" global="true"/>
                <set field="layoutSettings.javaScripts[+0]" value="/osafe_theme/js/lib/jquery.noConflict.js" global="true"/>
                <set field="layoutSettings.javaScripts[+0]" value="/osafe_theme/js/lib/jquery-1.5.2.min.js" global="true"/>
                <set field="layoutSettings.javaScripts[]" value="/osafe_theme/js/lib/jquery-ui.js" global="true"/>
                <set field="layoutSettings.javaScripts[]" value="/osafe_theme/js/lib/jquery.jqzoom-core.js" global="true"/>
                <set field="layoutSettings.javaScripts[]" value="/osafe_theme/js/lib/jquery.aw-showcase.js" global="true"/>
                <set field="layoutSettings.javaScripts[]" value="/osafe_theme/js/lib/jquery.aw-showcase.min.js" global="true"/>
                <set field="layoutSettings.javaScripts[]" value="/osafe_theme/js/lib/Dropdown.js" global="true"/>
                <set field="layoutSettings.companyName" from-field="uiLabelMap.eCommerceCompanyName" global="true"/>
                <set field="layoutSettings.companySubtitle" from-field="uiLabelMap.eCommerceCompanySubtitle" global="true"/>

                <set field="activeApp" value="osafe" global="true"/>
                <set field="applicationMenuName" value="MainAppBar" global="true"/>
                <set field="applicationMenuLocation" value="" global="true"/>
                <set field="applicationTitle" value="${uiLabelMap.eCommerceApplication}" global="true"/>
            </actions>
            <widgets>
                <include-screen name="GlobalDecorator" location="component://common/widget/CommonScreens.xml"/>
            </widgets>
        </section>
    </screen>

    <screen name="PageMessages">
        <section>
            <actions>
            </actions>
            <widgets>
                <platform-specific>
                    <html>
                       <html-template location="component://osafe/webapp/osafe/common/eCommerceErrorMessages.ftl"/>
                    </html>
                </platform-specific>
            </widgets>
        </section>
    </screen>
    <screen name="screen-macro-decorator">
        <section>
            <widgets>
               <include-screen name="CommonMacros"/>
               <decorator-section-include name="screenBody"/>
            </widgets>
        </section>
    </screen>

    <screen name="CommonMacros">
        <section>
            <widgets>
                <platform-specific>
                    <html>
