                                        </not>
                                    </condition>
                                    <widgets>
                                        <container id="eCommerceLeftPanel" style="${leftPanelStyle}">
                                            <include-screen name="${eCommerceLeftPanel}" location="${parameters.eCommerceScreensLocation}"/>
                                        </container>
